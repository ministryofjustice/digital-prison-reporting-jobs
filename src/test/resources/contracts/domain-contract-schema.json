{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Digital Prison Reporting Domain Contract Schema",
  "type": "object",
  "required": [
    "type",
    "name",
    "contacts",
    "database",
    "service",
    "namespace",
    "version",
    "description",
    "fields"
  ],
  "properties": {
    "type": { "enum": [ "record" ] },
    "name": { "type": "string" },
    "contacts": {
      "type": "object",
      "required": [ "author", "team", "slack" ],
      "properties": {
        "author": { "type": "string" },
        "team": { "type": "string" },
        "slack": { "type": "string" }
      }
    },
    "database": {
      "type": "object",
      "required": [ "type", "version", "name" ],
      "properties": {
        "type": { "enum": [ "mysql", "postgres", "oracle", "aurora", "redshift"] },
        "version": { "type":  "string" },
        "name": { "type":  "string" }
      }
    },
    "service": { "type": "string" },
    "namespace": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type":  "string" },
    "propagation-policy": { "type": "string" },
    "retention-policy": { "type": "string" },
    "fields": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/simple-field" },
          { "$ref": "#/definitions/enum-field" },
          { "$ref": "#/definitions/temporal-int-field" },
          { "$ref": "#/definitions/temporal-long-field" }
        ]
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "definitions": {
    "certified": {
      "type": "boolean",
      "default": false
    },
    "enum-field": {
      "type": "object",
      "required": [
        "type",
        "name",
        "nullable"
      ],
      "properties": {
        "type": {
          "type": "object",
          "required": [
            "name",
            "type",
            "symbols"
          ],
          "properties": {
            "name": { "type": "string" },
            "type": { "enum": [ "enum" ] },
            "symbols": {
              "type": "array",
              "items":  { "type":  "string" },
              "minItems": 1
            }
          }
        },
        "name": { "type": "string" },
        "nullable": { "type": "boolean" },
        "default": { "type":  "string" },
        "certified": { "$ref": "#/definitions/certified" },
        "description": { "type":  "string" },
        "glossary-index": { "type": "string" },
        "key": { "$ref": "#/definitions/key" },
        "pii-index": { "type": "string" },
        "sensitivity": { "$ref": "#/definitions/sensitivity" },
        "tags": { "$ref": "#/definitions/tags" }
      },
      "additionalProperties": false
    },
    "key": { "enum": [ "primary", "foreign" ] },
    "sensitivity": {
      "enum": [ "public", "private", "internal", "confidential", "restricted" ],
      "default": "public"
    },
    "simple-field": {
      "type": "object",
      "required": [
        "name",
        "nullable",
        "type"
      ],
      "properties": {
        "certified": { "$ref": "#/definitions/certified" },
        "description": { "type":  "string" },
        "glossary-index": { "type": "string" },
        "name": { "type":  "string" },
        "nullable": { "type":  "boolean" },
        "pii-index": { "type": "string" },
        "sensitivity": { "$ref": "#/definitions/sensitivity" },
        "key": { "$ref": "#/definitions/key" },
        "tags": { "$ref": "#/definitions/tags" },
        "type": { "enum":  [ "null", "boolean", "int", "long", "float", "double", "bytes", "string" ] }
      },
      "additionalProperties": false
    },
    "tags": { "type": "array", "items":  { "type": "string" } },
    "temporal-int-field": {
      "type": "object",
      "required": [
        "name",
        "nullable",
        "type",
        "logicalType"
      ],
      "properties": {
        "name": { "type": "string" },
        "type": { "enum": [ "int" ] },
        "logicalType": { "enum":  [ "date", "time-millis" ] },
        "nullable": { "type":  "boolean" },
        "certified": { "$ref": "#/definitions/certified" },
        "description": { "type":  "string" },
        "glossary-index": { "type": "string" },
        "pii-index": { "type": "string" },
        "sensitivity": { "$ref": "#/definitions/sensitivity" },
        "key": { "$ref": "#/definitions/key" },
        "tags": { "$ref": "#/definitions/tags" }
      }
    },
    "temporal-long-field": {
      "type": "object",
      "required": [
        "name",
        "nullable",
        "type",
        "logicalType"
      ],
      "properties": {
        "name": { "type": "string" },
        "type": { "enum": [ "long" ] },
        "logicalType": { "enum":  [ "time-micros", "timestamp-millis", "timestamp-micros" ] },
        "nullable": { "type":  "boolean" },
        "certified": { "$ref": "#/definitions/certified" },
        "description": { "type":  "string" },
        "glossary-index": { "type": "string" },
        "pii-index": { "type": "string" },
        "sensitivity": { "$ref": "#/definitions/sensitivity" },
        "key": { "$ref": "#/definitions/key" },
        "tags": { "$ref": "#/definitions/tags" }
      }
    }
  }
}
