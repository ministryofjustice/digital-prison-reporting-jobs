{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Digital Prison Reporting Domain Contract Schema",
  "type": "object",
  "required": [
    "contacts",
    "database",
    "description",
    "name",
    "namespace",
    "service",
    "table-type",
    "type",
    "version"
  ],
  "properties": {
    "contacts": {
      "type": "object",
      "required": [ "author", "team", "slack" ],
      "properties": {
        "author": { "type": "string" },
        "team": { "type": "string" },
        "slack": { "type": "string" }
      }
    },
    "database": {
      "type": "object",
      "required": [ "type", "version", "name" ],
      "properties": {
        "type": { "enum": [ "mysql", "postgres", "oracle", "aurora", "redshift"] },
        "version": { "type":  "string" },
        "name": { "type":  "string" }
      }
    },
    "description": { "type": "string" },
    "name": { "type": "string" },
    "namespace": { "type": "string" },
    "propagation-policy": { "type":  "string" },
    "retention-policy": { "type":  "string" },
    "service": { "type": "string" },
    "table-type": { "enum": [ "table", "view", "materialized-view" ] },
    "type": { "enum": [ "record" ] },
    "version": { "type": "string" }
  }
}
