{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Digital Prison Reporting Domain Contract Schema",
  "type": "object",
  "required": [
    "contacts",
    "database",
    "service",
    "tables",
    "type"
  ],
  "properties": {
    "contacts": {
      "type": "object",
      "required": [ "author", "team", "slack" ],
      "properties": {
        "author": { "type": "string" },
        "team": { "type": "string" },
        "slack": { "type": "string" }
      }
    },
    "database": {
      "type": "object",
      "required": [ "type", "version", "name" ],
      "properties": {
        "type": { "enum": [ "mysql", "postgres", "oracle", "aurora", "redshift"] },
        "version": { "type":  "string" },
        "name": { "type":  "string" }
      }
    },
    "service": { "type": "string" },
    "tables": {
      "type": "array",
      "items": { "anyOf": [ { "$ref": "#/definitions/table" } ] },
      "minItems": 1,
      "maxItems": 1
    },
    "type": { "enum": [ "record" ] },
    "version": { "type": "string" }
  },
  "additionalProperties": false,
  "definitions": {
    "certified": {
      "type": "boolean",
      "default": false
    },
    "enum-field": {
      "type": "object",
      "required": [
        "type",
        "name",
        "symbols",
        "nullable"
      ],
      "properties": {
        "certified": { "$ref": "#/definitions/certified" },
        "description": { "type":  "string" },
        "glossary-index": { "type": "string" },
        "key": { "enum": [ "primary", "foreign" ] },
        "type": { "enum": [ "enum" ] },
        "name": { "type": "string" },
        "nullable": { "type": "boolean" },
        "pii-index": { "type": "string" },
        "sensitivity": { "$ref": "#/definitions/sensitivity" },
        "symbols": { "type": "array", "items":  { "type":  "string" }},
        "tags": { "type": "array", "items": { "type": "string" }}
      }
    },
    "sensitivity": {
      "enum": [ "public", "private", "internal", "confidential", "restricted" ],
      "default": "public"
    },
    "simple-field": {
      "type": "object",
      "required": [
        "name",
        "nullable",
        "type"
      ],
      "properties": {
        "certified": { "$ref": "#/definitions/certified" },
        "description": { "type":  "string" },
        "glossary-index": { "type": "string" },
        "name": { "type":  "string" },
        "nullable": { "type":  "boolean" },
        "pii-index": { "type": "string" },
        "sensitivity": { "$ref": "#/definitions/sensitivity" },
        "key": { "enum": [ "primary", "foreign" ] },
        "tags": { "type": "array", "items": { "type": "string" }},
        "type": { "enum":  [ "null", "boolean", "int", "long", "float", "double", "bytes", "string" ] }
      },
      "additionalProperties": false
    },
    "table": {
      "type": "object",
      "required": [
        "description",
        "fields",
        "name",
        "namespace",
        "type",
        "version"
      ],
      "properties": {
        "description": { "type": "string" },
        "fields": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/definitions/simple-field" },
              { "$ref": "#/definitions/enum-field" }
            ]
          },
          "minItems": 1
        },
        "type": { "enum": [ "table", "view", "materialized-view" ] },
        "name": { "type": "string" },
        "namespace": { "type": "string" },
        "propagation-policy": { "type":  "string" },
        "retention-policy": { "type":  "string" },
        "version": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
