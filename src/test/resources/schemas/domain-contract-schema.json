{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Digital Prison Reporting Domain Contract Schema",
  "type": "object",
  "required": [
    "contacts",
    "database",
    "service",
    "tables",
    "type"
  ],
  "properties": {
    "contacts": {
      "type": "object",
      "required": [ "author", "team", "slack" ],
      "properties": {
        "author": { "type": "string" },
        "team": { "type": "string" },
        "slack": { "type": "string" }
      }
    },
    "database": {
      "type": "object",
      "required": [ "type", "version", "name" ],
      "properties": {
        "type": { "enum": [ "mysql", "postgres", "oracle", "aurora", "redshift"] },
        "version": { "type":  "string" },
        "name": { "type":  "string" }
      }
    },
    "service": { "type": "string" },
    "tables": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/table"
          }
        ]
      },
      "minItems": 1,
      "maxItems": 1
    },
    "type": { "enum": [ "record" ] },
    "version": { "$ref": "#/definitions/version" }
  },
  "definitions": {
    "version": { "type":  "string" },
    "table": {
      "type": "object",
      "required": [
        "description",
        "name",
        "namespace",
        "type",
        "version"
      ],
      "properties": {
        "description": { "type": "string" },
        "type": { "enum": [ "table", "view", "materialized-view" ] },
        "name": { "type": "string" },
        "namespace": { "type": "string" },
        "propagation-policy": { "type":  "string" },
        "retention-policy": { "type":  "string" },
        "version": { "$ref": "#/definitions/version" }
      }
    }
  }
}
